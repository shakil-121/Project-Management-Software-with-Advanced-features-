@using FastPMS.Models.ViewModel;
@model VerifyEmailViewModel

@{
    ViewData["Title"] = "Verify Email";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify Email - FastPMS</title>
    <link rel="stylesheet" href="~/css/account.css">
</head>
<body>
    <div class="account-container">
        <div class="account-box">
            <h2 class="text-center mb-4">Verify Email</h2>
            <p class="text-center text-muted mb-4">Enter your email address to verify your account</p>
            
            <form asp-action="VerifyEmail" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <input type="submit" value="Verify Email" class="shadow__btn btn text-white w-100 p-2" />
                
                <div class="text-center mt-3">
                    <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Back to Login</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}