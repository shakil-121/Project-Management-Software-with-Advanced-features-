@{
    ViewData["Title"] = "Home Page";

    // Get user role at the top level
    var roleClaim = Context.User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role);
    var userRole = roleClaim?.Value ?? "User";
    var isAuthenticated = User.Identity.IsAuthenticated;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FastPMS - Project Management System</title>
    <link rel="stylesheet" href="~/css/StyleSheet.css">
    <script defer src="script.js"></script>
    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg pt-4">
        <div class="container">
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarButtonsExample"
                    aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarButtonsExample">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <h3><i class='bx bx-analyse'></i> Dashboard</h3>
                    </li>
                </ul>
                <div class="d-flex align-items-center ms-auto">
                    @if (isAuthenticated)
                    {
                        <!-- Authenticated User Menu -->
                        <div class="dropdown">
                            <button class="btn btn-outline-primary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class='bx bx-user me-1'></i>
                                @User.Identity.Name
                                <span class="badge bg-secondary ms-1">@userRole</span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" href="@Url.Action("MyProfile", "Project")"><i class='bx bx-user me-2'></i>My Profile</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class='bx bx-log-out me-2'></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <!-- Guest User Menu -->
                        <a asp-controller="Account" asp-action="Login" type="button" class="btn btn-primary me-3">
                            <i class='bx bx-log-in me-1'></i>Login
                        </a>
                        <a asp-controller="Account" asp-action="Register" type="button" class="btn btn-outline-primary me-3">
                            <i class='bx bx-user-plus me-1'></i>Sign Up
                        </a>
                        <a href="https://github.com" role="button" class="fs-2 text-dark">
                            <i class='bx bxl-github'></i>
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- Welcome Section -->
    <div class="container mt-4">
        @if (isAuthenticated)    
        {
            <!-- Welcome Message for Authenticated Users -->
            <div class="row welcome mb-4">
                <div class="col-12">  
                    <div class="align-items-center" role="alert">  
                        <i class='bx bx-check-circle me-2 fs-4'></i> 
                        <div>
                            <h5 class="alert-heading mb-1">Welcome back, @User.Identity.Name! 👋</h5>
                            <p class="mb-0">You are logged in as <strong>@userRole</strong>. Here's your project overview.</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Welcome Message for Guests -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="alert alert-info d-flex align-items-center" role="alert">
                        <i class='bx bx-info-circle me-2 fs-4'></i>
                        <div>
                            <h5 class="alert-heading mb-1">Welcome to FastPMS! 🚀</h5>
                            <p class="mb-0">Please login or sign up to access your projects and manage your account.</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Logo Section -->
    <div class="d-flex justify-content-center mb-4">
        <img src="~/images/pms-logo.png" style="height:150px; width:500px" alt="FastPMS Logo" />
    </div>

    <!-- Role-Based Dashboard Content -->
    @if (isAuthenticated)
    {
        <!-- Authenticated User Dashboard -->
        <div class="container">
            <!-- Quick Actions Based on Role -->
            @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
            {
                <!-- Admin Quick Actions -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title mb-3"><i class='bx bx-rocket me-2 text-primary'></i>Quick Actions</h5>
                                <div class="row">
                                    <div class="col-md-3 mb-2">
                                        <a href="@Url.Action("CreateProject", "AdminProject")" class="btn btn-primary w-100">
                                            <i class='bx bx-plus me-1'></i>Create Project
                                        </a>
                                    </div>
                                    <div class="col-md-3 mb-2">
                                        <a href="@Url.Action("AllProject", "AdminProject")" class="btn btn-outline-primary w-100">
                                            <i class='bx bx-folder me-1'></i>View Projects
                                        </a>
                                    </div>
                                    <div class="col-md-3 mb-2">
                                        <a href="@Url.Action("ClientManagement", "AdminProject")" class="btn btn-outline-info w-100">
                                            <i class='bx bx-group me-1'></i>Manage Clients
                                        </a>
                                    </div>
                                    <div class="col-md-3 mb-2">
                                        <a href="@Url.Action("AddDev", "AdminProject")" class="btn btn-outline-success w-100">
                                            <i class='bx bx-user-plus me-1'></i>Add Developer
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (User.IsInRole("TeamMember"))
            {
                <!-- Team Member Quick Actions -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title mb-3"><i class='bx bx-task me-2 text-primary'></i>My Tasks</h5>
                                <div class="row">
                                    <div class="col-md-4 mb-2">
                                        <a href="@Url.Action("MyTasks", "Task")" class="btn btn-primary w-100">
                                            <i class='bx bx-list-check me-1'></i>View Tasks
                                        </a>
                                    </div>
                                    <div class="col-md-4 mb-2">
                                        <a href="@Url.Action("MySubTasks", "Task")" class="btn btn-outline-primary w-100">
                                            <i class='bx bx-task me-1'></i>My Sub-Tasks
                                        </a>
                                    </div>
                                    <div class="col-md-4 mb-2">
                                        <a href="@Url.Action("Index", "Chat")" class="btn btn-outline-info w-100">
                                            <i class='bx bx-chat me-1'></i>Team Chat
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (User.IsInRole("Client"))
            {
                <!-- Client Quick Actions -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title mb-3"><i class='bx bx-folder me-2 text-primary'></i>My Projects</h5>
                                <div class="row">
                                    <div class="col-md-6 mb-2">
                                        <a href="@Url.Action("MyProjectStatus", "Project")" class="btn btn-primary w-100">
                                            <i class='bx bx-show me-1'></i>View My Projects
                                        </a>
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <a href="@Url.Action("Index", "Chat")" class="btn btn-outline-primary w-100">
                                            <i class='bx bx-message me-1'></i>Contact Support
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Project Statistics Section -->
            @if (User.IsInRole("Client"))
            {
                <!-- For Client Users - Show Project Access Card -->
                <div class="row">
                    <div class="col-12">
                        <div class="card border-0 shadow-lg" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <div class="card-body text-center text-white py-5">
                                <i class='bx bx-folder-open display-1 mb-3'></i>
                                <h3 class="mb-3">Your Project Dashboard</h3>
                                <p class="lead mb-4 opacity-75">
                                    Access all your assigned projects in one place. Track progress, view details, and stay updated with real-time status.
                                </p>
                                <a href="@Url.Action("MyProjectStatus", "Project")" class="btn btn-light btn-lg px-5 py-3 fw-bold">
                                    <i class='bx bx-show me-2'></i>Go to My Projects
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- For Non-Client Users (Admin/SuperAdmin/TeamMember) - Show Statistics with Chart -->
                <div class="row">
                    <div class="col-12">
                        <div class="card bg-primary text-white shadow mb-3">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <h5 class="card-title mb-1"><i class='bx bxs-folder'></i> Total Projects</h5>
                                        <p class="card-text mb-0">@ViewBag.TotalProjectsCount Projects in the system</p>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <h3 class="mb-0">@ViewBag.TotalProjectsCount</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Statistics Cards -->
                    <div class="col-lg-4">
                        <div class="row">
                            <div class="col-md-6 col-lg-12 mb-3">
                                <div class="card bg-light shadow">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h5 class="card-title text-muted mb-1"><i class='bx bx-radio-circle-marked text-secondary'></i> Not Started</h5>
                                                <p class="card-text fs-4 fw-bold">@ViewBag.NotStartedCount</p>
                                            </div>
                                            <div class="text-muted">
                                                <small>Projects</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-12 mb-3">
                                <div class="card bg-info text-white shadow">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h5 class="card-title mb-1"><i class='bx bxs-caret-up-circle'></i> In Progress</h5>
                                                <p class="card-text fs-4 fw-bold">@ViewBag.InProgressCount</p>
                                            </div>
                                            <div>
                                                <small>Active</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="row">
                            <div class="col-md-6 col-lg-12 mb-3">
                                <div class="card bg-warning shadow">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h5 class="card-title mb-1"><i class='bx bx-stop-circle'></i> On Hold</h5>
                                                <p class="card-text fs-4 fw-bold">@ViewBag.OnHoldCount</p>
                                            </div>
                                            <div class="text-muted">
                                                <small>Paused</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-12 mb-3">
                                <div class="card bg-success text-white shadow">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h5 class="card-title mb-1"><i class='bx bx-check-square'></i> Completed</h5>
                                                <p class="card-text fs-4 fw-bold">@ViewBag.CompletedCount</p>
                                            </div>
                                            <div>
                                                <small>Finished</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Chart Section -->
                    <div class="col-lg-4">
                        <div class="card border-0 shadow">
                            <div class="card-body">
                                <h5 class="card-title mb-3"><i class='bx bx-chart me-2'></i>Project Status Distribution</h5>
                                <div style="height: 250px;">
                                    <canvas id="projectStatusChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Chart Options -->
                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card border-0 shadow">
                            <div class="card-body">
                                <h5 class="card-title mb-3"><i class='bx bx-pie-chart me-2'></i>Project Status Pie Chart</h5>
                                <div style="height: 300px;">
                                    <canvas id="projectPieChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card border-0 shadow">
                            <div class="card-body">
                                <h5 class="card-title mb-3"><i class='bx bx-bar-chart me-2'></i>Project Status Bar Chart</h5>
                                <div style="height: 300px;">
                                    <canvas id="projectBarChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Role-Specific Information -->
                @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                {
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title text-primary mb-3">
                                        <i class='bx bx-stats me-2'></i>System Overview
                                    </h5>
                                    <div class="system-stats">
                                        <div class="stat-item d-flex justify-content-between py-2 border-bottom">
                                            <span class="text-muted">Total Users</span>
                                            <strong>@(ViewBag.TotalUsers ?? "Loading...")</strong>
                                        </div>
                                        <div class="stat-item d-flex justify-content-between py-2 border-bottom">
                                            <span class="text-muted">Active Projects</span>
                                            <strong>@ViewBag.InProgressCount</strong>
                                        </div>
                                        <div class="stat-item d-flex justify-content-between py-2">
                                            <span class="text-muted">Completion Rate</span>
                                            <strong>
                                                @{
                                                    var completionRate = ViewBag.TotalProjectsCount > 0 ?
                                                    Math.Round((ViewBag.CompletedCount / (double)ViewBag.TotalProjectsCount) * 100, 1) : 0;
                                                }
                                                @completionRate%
                                            </strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title text-success mb-3">
                                        <i class='bx bx-trending-up me-2'></i>Recent Activity
                                    </h5>
                                    <div class="activity-list">
                                        <div class="activity-item d-flex align-items-center py-2 border-bottom">
                                            <i class='bx bx-plus-circle text-success me-2'></i>
                                            <small>New project "Website Redesign" created</small>
                                        </div>
                                        <div class="activity-item d-flex align-items-center py-2 border-bottom">
                                            <i class='bx bx-check-circle text-primary me-2'></i>
                                            <small>Project "Mobile App" completed</small>
                                        </div>
                                        <div class="activity-item d-flex align-items-center py-2">
                                            <i class='bx bx-user-plus text-info me-2'></i>
                                            <small>New team member added</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }
    else
    {
        <!-- Guest User Dashboard -->
        <div class="container">
            <!-- Feature Highlights -->
            <div class="row mb-5">
                <div class="col-12 text-center">
                    <h3 class="text-primary mb-4">Why Choose FastPMS?</h3>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-0 shadow-sm h-100 text-center">
                        <div class="card-body">
                            <i class='bx bx-rocket text-primary fs-1 mb-3'></i>
                            <h5 class="card-title">Efficient Project Management</h5>
                            <p class="card-text text-muted">Streamline your projects with our intuitive management tools and real-time collaboration.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-0 shadow-sm h-100 text-center">
                        <div class="card-body">
                            <i class='bx bx-group text-success fs-1 mb-3'></i>
                            <h5 class="card-title">Team Collaboration</h5>
                            <p class="card-text text-muted">Work seamlessly with your team members through integrated chat and task assignment.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-0 shadow-sm h-100 text-center">
                        <div class="card-body">
                            <i class='bx bx-chart text-info fs-1 mb-3'></i>
                            <h5 class="card-title">Real-time Analytics</h5>
                            <p class="card-text text-muted">Get instant insights into project progress with comprehensive dashboards and reports.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Project Statistics for Guests -->
            <div class="row">
                <div class="col-12">
                    <div class="card bg-primary text-white shadow mb-3">
                        <div class="card-body text-center">
                            <h5 class="card-title mb-1"><i class='bx bxs-folder'></i> System Overview</h5>
                            <p class="card-text mb-0">@ViewBag.TotalProjectsCount Projects Managed Successfully</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <div class="card bg-light shadow mb-3">
                        <div class="card-body text-center">
                            <h5 class="card-title text-muted mb-1"><i class='bx bx-radio-circle-marked text-secondary'></i> Planning</h5>
                            <p class="card-text fs-4 fw-bold">@ViewBag.NotStartedCount</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white shadow mb-3">
                        <div class="card-body text-center">
                            <h5 class="card-title mb-1"><i class='bx bxs-caret-up-circle'></i> In Development</h5>
                            <p class="card-text fs-4 fw-bold">@ViewBag.InProgressCount</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning shadow mb-3">
                        <div class="card-body text-center">
                            <h5 class="card-title mb-1"><i class='bx bx-stop-circle'></i> On Hold</h5>
                            <p class="card-text fs-4 fw-bold">@ViewBag.OnHoldCount</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white shadow mb-3">
                        <div class="card-body text-center">
                            <h5 class="card-title mb-1"><i class='bx bx-check-square'></i> Delivered</h5>
                            <p class="card-text fs-4 fw-bold">@ViewBag.CompletedCount</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Call to Action -->
            <div class="row mt-5">
                <div class="col-12 text-center">
                    <div class="card border-0 bg-light">
                        <div class="card-body py-5">
                            <h3 class="text-primary mb-3">Ready to Get Started?</h3>
                            <p class="text-muted mb-4">Join thousands of teams already managing their projects with FastPMS</p>
                            <div class="d-flex justify-content-center gap-3">
                                <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">
                                    <i class='bx bx-user-plus me-2'></i>Start Free Trial
                                </a>
                                <a href="#features" class="btn btn-outline-primary btn-lg">
                                    <i class='bx bx-info-circle me-2'></i>Learn More
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    } 

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Chart data from ViewBag
            const projectData = {
                notStarted: @ViewBag.NotStartedCount,
                inProgress: @ViewBag.InProgressCount,
                onHold: @ViewBag.OnHoldCount,
                completed: @ViewBag.CompletedCount
            };

            const primaryColor = '#5932EA';
            const chartColors = [
                primaryColor,
                '#36A2EB',
                '#FF6384',
                '#4BC0C0'
            ];

            // Doughnut Chart
            const doughnutCtx = document.getElementById('projectStatusChart').getContext('2d');
            new Chart(doughnutCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Not Started', 'In Progress', 'On Hold', 'Completed'],
                    datasets: [{
                        data: [projectData.notStarted, projectData.inProgress, projectData.onHold, projectData.completed],
                        backgroundColor: chartColors,
                        borderColor: '#fff',
                        borderWidth: 2,
                        hoverOffset: 10
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                usePointStyle: true,
                                pointStyle: 'circle'
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.raw || 0;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = Math.round((value / total) * 100);
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    },
                    cutout: '60%'
                }
            });

            // Pie Chart
            const pieCtx = document.getElementById('projectPieChart').getContext('2d');
            new Chart(pieCtx, {
                type: 'pie',
                data: {
                    labels: ['Not Started', 'In Progress', 'On Hold', 'Completed'],
                    datasets: [{
                        data: [projectData.notStarted, projectData.inProgress, projectData.onHold, projectData.completed],
                        backgroundColor: chartColors,
                        borderColor: '#fff',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right',
                            labels: {
                                padding: 15,
                                usePointStyle: true
                            }
                        }
                    }
                }
            });

            // Bar Chart
            const barCtx = document.getElementById('projectBarChart').getContext('2d');
            new Chart(barCtx, {
                type: 'bar',
                data: {
                    labels: ['Not Started', 'In Progress', 'On Hold', 'Completed'],
                    datasets: [{
                        label: 'Number of Projects',
                        data: [projectData.notStarted, projectData.inProgress, projectData.onHold, projectData.completed],
                        backgroundColor: primaryColor,
                        borderColor: primaryColor,
                        borderWidth: 1,
                        borderRadius: 8,
                        barPercentage: 0.6
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                drawBorder: false
                            },
                            ticks: {
                                stepSize: 1
                            }
                        },
