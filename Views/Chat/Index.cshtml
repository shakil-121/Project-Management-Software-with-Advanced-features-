@model List<FastPMS.Models.Domain.Users>
@{
    ViewData["Title"] = "Live Chat";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Chat Users</h5>
                    <span class="badge bg-light text-dark" id="onlineCount">0 Online</span>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush" id="chatUsersList">
                        @foreach (var user in Model)
                        {
                            <!-- ✅ USE RoleName INSTEAD OF user.Roles.FirstOrDefault()?.Name -->
                            <a href="javascript:void(0)" class="list-group-item list-group-item-action chat-user-item"
                               data-userid="@user.Id" data-username="@user.UserName">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <div class="online-indicator offline" id="online-@user.Id"></div>
                                        <div>
                                            <strong>@user.UserName</strong>
                                            <br>
                                            <small class="text-muted">@user.Role</small> <!-- ✅ Use RoleName here -->
                                        </div>
                                    </div>
                                    <span class="badge bg-success unread-count" id="unread-@user.Id" style="display: none;">0</span>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0" id="chatWithUser">Select a user to start chatting</h5>
                    <div id="typingIndicator" style="display: none;">
                        <small><i class="fas fa-pencil-alt"></i> <span id="typingUser"></span> is typing...</small>
                    </div>
                </div>
                <div class="card-body">
                    <div id="chatContainer" style="display: none;">
                        <div id="chatMessages" class="chat-messages" style="height: 400px; overflow-y: auto; border: 1px solid #ddd; padding: 15px; margin-bottom: 15px;">
                        </div>
                        <div class="input-group">
                            <input type="text" id="messageInput" class="form-control" placeholder="Type your message..." disabled>
                            <button id="sendMessage" class="btn btn-primary" disabled>Send</button>
                        </div>
                    </div>
                    <div id="noUserSelected" class="text-center text-muted">
                        <i class="fas fa-comments fa-3x mb-3"></i>
                        <p>Please select a user to start chatting</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .chat-messages {
            background: #f8f9fa;
            border-radius: 10px;
        }

        .message {
            margin-bottom: 15px;
            padding: 10px 15px;
            border-radius: 18px;
            max-width: 70%;
            word-wrap: break-word;
        }

        .message-sent {
            background: #007bff;
            color: white;
            margin-left: auto;
            border-bottom-right-radius: 5px;
        }

        .message-received {
            background: white;
            border: 1px solid #dee2e6;
            margin-right: auto;
            border-bottom-left-radius: 5px;
        }

        .message-time {
            font-size: 11px;
            opacity: 0.7;
            margin-top: 5px;
        }

        .chat-user-item:hover {
            background-color: #f8f9fa;
            cursor: pointer;
        }

        .chat-user-item.active {
            background-color: #007bff;
            color: white;
        }

        .online-indicator {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .online {
            background-color: #28a745;
        }

        .offline {
            background-color: #6c757d;
        }
    </style>
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        let currentChatUser = null;
        let connection = null;
        let isRealTimeConnected = false;
        let autoRefreshInterval = null;

        console.log("🚀 CHAT SYSTEM LOADING...");

        // ✅ SIGNALR CONNECTION ATTEMPT
        async function initializeSignalR() {
            try {
                console.log("🔌 Attempting SignalR connection...");

                connection = new signalR.HubConnectionBuilder()
                    .withUrl("/chatHub")
                    .withAutomaticReconnect([0, 1000, 3000, 5000, 10000])
                    .build();

                // ✅ MESSAGE RECEIVE HANDLER
                connection.on("ReceiveMessage", (message) => {
                    console.log("🎉 REAL-TIME MESSAGE RECEIVED!", message);

                    if (currentChatUser && message.SenderId === currentChatUser) {
                        console.log("🔄 Adding message to UI instantly");
                        addMessageToChat(message, 'received');
                    }
                });

                connection.on("ConnectionConfirmed", (message) => {
                    console.log("✅", message);
                    isRealTimeConnected = true;
                    stopAutoRefresh(); // Real-time working, stop auto-refresh
                });

                // ✅ START CONNECTION
                await connection.start();
                console.log("🎉 SIGNALR CONNECTED!");
                isRealTimeConnected = true;
                stopAutoRefresh(); // Real-time working, stop auto-refresh

            } catch (err) {
                console.error("❌ SignalR failed, using auto-refresh mode");
                isRealTimeConnected = false;
                startAutoRefresh(); // Start auto-refresh as fallback
            }
        }

        // ✅ AUTO-REFRESH FALLBACK
        function startAutoRefresh() {
            console.log("🔄 STARTING AUTO-REFRESH (2 second intervals)");

            if (autoRefreshInterval) {
                clearInterval(autoRefreshInterval);
            }

            autoRefreshInterval = setInterval(() => {
                if (currentChatUser) {
                    console.log("🔄 Auto-refreshing chat...");
                    loadChatHistory(currentChatUser);
                }
            }, 2000);
        }

        function stopAutoRefresh() {
            if (autoRefreshInterval) {
                console.log("🛑 Stopping auto-refresh - Real-time is working");
                clearInterval(autoRefreshInterval);
                autoRefreshInterval = null;
            }
        }

        // ✅ MANUAL REFRESH
        function manualRefresh() {
            if (currentChatUser) {
                console.log("🔄 Manual refresh triggered");
                loadChatHistory(currentChatUser);
            }
        }

        // ✅ SEND MESSAGE
        async function sendMessage() {
            const messageInput = document.getElementById('messageInput');
            const message = messageInput.value.trim();

            if (!message || !currentChatUser) return;

            console.log("✉️ Sending message:", message);

            try {
                // ✅ IMMEDIATE UI UPDATE
                const tempMessage = {
                    SenderId: 'current',
                    SenderName: 'You',
                    Message: message,
                    Timestamp: new Date().toISOString()
                };

                addMessageToChat(tempMessage, 'sent');
                messageInput.value = '';
                messageInput.focus();

                // ✅ SEND TO SERVER
                if (isRealTimeConnected) {
                    await connection.invoke("SendMessage", currentChatUser, message);
                    console.log("✅ Sent via REAL-TIME");
                } else {
                    // API Fallback
                    await fetch('/Chat/SendMessage', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify({
                            receiverId: currentChatUser,
                            message: message
                        })
                    });
                    console.log("✅ Sent via API");

                    // Auto-refresh after sending message
                    setTimeout(() => {
                        if (currentChatUser) {
                            loadChatHistory(currentChatUser);
                        }
                    }, 500);
                }

            } catch (error) {
                console.error('❌ Send failed:', error);
            }
        }

        // ✅ EVENT LISTENERS
        function setupEventListeners() {
            // User selection
            document.querySelectorAll('.chat-user-item').forEach(item => {
                item.addEventListener('click', function() {
                    const userId = this.getAttribute('data-userid');
                    const userName = this.getAttribute('data-username');

                    document.querySelectorAll('.chat-user-item').forEach(i => i.classList.remove('active'));
                    this.classList.add('active');

                    startChat(userId, userName);
                });
            });

            // Send message
            document.getElementById('sendMessage').addEventListener('click', sendMessage);
            document.getElementById('messageInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') sendMessage();
            });

            // Refresh button
            document.getElementById('refreshChat').addEventListener('click', function() {
                manualRefresh();
            });

            // Auto-refresh when window gains focus
            window.addEventListener('focus', function() {
                if (currentChatUser && !isRealTimeConnected) {
                    console.log("🔄 Window focused - refreshing chat");
                    loadChatHistory(currentChatUser);
                }
            });
        }

        // ✅ START CHAT
        function startChat(userId, userName) {
            currentChatUser = userId;

            document.getElementById('chatWithUser').textContent = `Chat with ${userName}`;
            document.getElementById('chatContainer').style.display = 'block';
            document.getElementById('noUserSelected').style.display = 'none';
            document.getElementById('messageInput').disabled = false;
            document.getElementById('sendMessage').disabled = false;
            document.getElementById('messageInput').focus();

            loadChatHistory(userId);

            // Start auto-refresh if real-time not working
            if (!isRealTimeConnected) {
                startAutoRefresh();
            }
        }

        // ✅ LOAD CHAT HISTORY
        async function loadChatHistory(userId) {
            try {
                const response = await fetch(`/Chat/GetChatHistory?otherUserId=${userId}`);
                const messages = await response.json();

                const chatMessages = document.getElementById('chatMessages');
                chatMessages.innerHTML = '';

                messages.forEach(msg => {
                    const messageType = msg.senderId === currentChatUser ? 'received' : 'sent';
                    addMessageToChat(msg, messageType);
                });

                chatMessages.scrollTop = chatMessages.scrollHeight;

                console.log("✅ Chat loaded:", messages.length, "messages");
            } catch (error) {
                console.error('Error loading chat:', error);
            }
        }

        // ✅ ADD MESSAGE TO UI
        function addMessageToChat(message, type) {
            const chatMessages = document.getElementById('chatMessages');
            const messageDiv = document.createElement('div');
            messageDiv.className = `message message-${type}`;

            const time = new Date(message.Timestamp || message.timestamp).toLocaleTimeString([], {
                hour: '2-digit', minute: '2-digit'
            });

            const senderName = type === 'sent' ? 'You' : (message.SenderName || 'User');

            messageDiv.innerHTML = `
                <div><strong>${senderName}:</strong> ${message.Message || message.message}</div>
                <div class="message-time">${time}</div>
            `;

            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        // ✅ INITIALIZE
        document.addEventListener('DOMContentLoaded', function() {
            console.log("🚀 Initializing chat system...");
            initializeSignalR();
            setupEventListeners();

            // Status indicator
            setInterval(() => {
                const status = isRealTimeConnected ? "✅ REAL-TIME" : "🔄 AUTO-REFRESH";
                console.log(`Chat Status: ${status}`);
            }, 10000);
        });

        // ✅ MANUAL CONTROLS
        window.enableRealTime = function() {
            initializeSignalR();
        };

        window.enableAutoRefresh = function() {
            startAutoRefresh();
        };

        window.disableAutoRefresh = function() {
            stopAutoRefresh();
        };
    </script>
}