@using Microsoft.AspNetCore.Identity
@inject SignInManager<FastPMS.Models.Domain.Users> SignInManager

@if (SignInManager.IsSignedIn(User) &&
     (User.IsInRole("SuperAdmin") || User.IsInRole("Admin") || User.IsInRole("TeamMember")))
{
    <div id="aiChatContainer">
        <!-- AI Assistant Button -->
        <button id="aiChatButton" class="ai-assistant-btn">
            <i class="fas fa-robot"></i>
            <span>AI Assistant</span>
        </button>

        <!-- Chat Modal -->
        <div id="aiChatModal" class="ai-chat-modal">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-robot me-2"></i>
                    AI Assistant
                </h5>
                <button type="button" id="closeChat" class="btn-close"></button>
            </div>
            <div class="modal-body">
                <div id="chatMessages" class="chat-messages">
                    <div class="ai-message">
                        <div class="message-content">
                            <strong>AI Assistant:</strong>
                            <p>Hello! I'm your AI Assistant. How can I help you with your projects today?</p>
                        </div>
                        <div class="message-time">Just now</div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="input-group">
                    <input type="text" id="messageInput" class="form-control" placeholder="Type your message...">
                    <button id="sendMessage" class="btn btn-primary">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
                <div class="text-center mt-2">
                    <small class="text-muted">Powered by DeepSeek AI</small>
                </div>
            </div>
        </div>
    </div>

    <style>
        .ai-assistant-btn {
            position: fixed;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 25px;
            padding: 12px 24px;
            color: white;
            font-weight: 600;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
            z-index: 1000;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            animation: pulseAnimation 2s infinite;
        }

            .ai-assistant-btn:hover {
                transform: translateX(-50%) scale(1.05);
                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
            }

        .ai-chat-modal {
            position: fixed;
            bottom: 100px;
            right: 30px;
            width: 400px;
            height: 500px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            z-index: 1001;
            display: none;
            flex-direction: column;
            border: 1px solid #dee2e6;
        }

        .modal-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-bottom: none;
            border-radius: 10px 10px 0 0;
            padding: 15px 20px;
        }

        .modal-body {
            flex: 1;
            overflow-y: auto;
            padding: 15px;
            background: #f8f9fa;
        }

        .modal-footer {
            border-top: 1px solid #dee2e6;
            padding: 15px;
            background: white;
            border-radius: 0 0 10px 10px;
        }

        .chat-messages {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .user-message {
            align-self: flex-end;
            background: #007bff;
            color: white;
            padding: 12px 16px;
            border-radius: 18px;
            max-width: 80%;
            border-bottom-right-radius: 5px;
        }

        .ai-message {
            align-self: flex-start;
            background: white;
            padding: 12px 16px;
            border-radius: 18px;
            border: 1px solid #dee2e6;
            max-width: 80%;
            border-bottom-left-radius: 5px;
        }

        .message-content {
            margin-bottom: 5px;
        }

        .message-time {
            font-size: 11px;
            opacity: 0.7;
            text-align: right;
        }

        .ai-message .message-time {
            text-align: left;
        }

        /* Keyframes animation - FIXED */
        @@keyframes pulseAnimation {
            0% {
                transform: translateX(-50%) scale(1);
                box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
            }

            50% {
                transform: translateX(-50%) scale(1.05);
                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
            }

            100% {
                transform: translateX(-50%) scale(1);
                box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
            }
        }

        /* Scrollbar styling */
        .modal-body::-webkit-scrollbar {
            width: 6px;
        }

        .modal-body::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        .modal-body::-webkit-scrollbar-thumb {
            background: #c1c1c1;
            border-radius: 3px;
        }

            .modal-body::-webkit-scrollbar-thumb:hover {
                background: #a8a8a8;
            }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const chatButton = document.getElementById('aiChatButton');
            const chatModal = document.getElementById('aiChatModal');
            const closeChat = document.getElementById('closeChat');
            const sendButton = document.getElementById('sendMessage');
            const messageInput = document.getElementById('messageInput');
            const chatMessages = document.getElementById('chatMessages');

            // Toggle chat modal
            chatButton.addEventListener('click', function() {
                if (chatModal.style.display === 'flex') {
                    chatModal.style.display = 'none';
                } else {
                    chatModal.style.display = 'flex';
                    messageInput.focus();
                }
            });

            closeChat.addEventListener('click', function() {
                chatModal.style.display = 'none';
            });

            // Close modal when clicking outside
            document.addEventListener('click', function(event) {
                if (!chatModal.contains(event.target) && !chatButton.contains(event.target)) {
                    chatModal.style.display = 'none';
                }
            });

            // Send message function
            async function sendMessage() {
                const message = messageInput.value.trim();
                if (!message) return;

                // Add user message to chat
                addMessage(message, 'user');
                messageInput.value = '';

                try {
                    // Show loading indicator
                    const loadingDiv = document.createElement('div');
                    loadingDiv.className = 'ai-message';
                    loadingDiv.innerHTML = '<em>AI is typing...</em>';
                    chatMessages.appendChild(loadingDiv);
                    chatMessages.scrollTop = chatMessages.scrollHeight;

                    const response = await fetch('/AIChat/SendMessage', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify({ message: message })
                    });

                    // Remove loading indicator
                    chatMessages.removeChild(loadingDiv);

                    const result = await response.json();

                    if (result.success) {
                        addMessage(result.data.response, 'ai');
                    } else {
                        addMessage('Error: ' + result.error, 'ai');
                    }
                } catch (error) {
                    addMessage('Error sending message: ' + error.message, 'ai');
                }
            }

            // Add message to chat UI
            function addMessage(text, sender) {
                const messageDiv = document.createElement('div');
                messageDiv.className = `${sender}-message`;

                const now = new Date();
                const timeString = now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

                if (sender === 'user') {
                    messageDiv.innerHTML = `
                        <div class="message-content">${text}</div>
                        <div class="message-time">${timeString}</div>
                    `;
                } else {
                    messageDiv.innerHTML = `
                        <div class="message-content">
                            <strong>AI Assistant:</strong>
                            <p style="margin: 5px 0 0 0;">${text}</p>
                        </div>
                        <div class="message-time">${timeString}</div>
                    `;
                }

                chatMessages.appendChild(messageDiv);
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }

            // Event listeners
            sendButton.addEventListener('click', sendMessage);
            messageInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    sendMessage();
                }
            });

            // Prevent modal close when clicking inside
            chatModal.addEventListener('click', function(event) {
                event.stopPropagation();
            });
        });
    </script>
}