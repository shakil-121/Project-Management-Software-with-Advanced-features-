@using Microsoft.AspNetCore.Identity
@inject SignInManager<FastPMS.Models.Domain.Users> SignInManager

@if (SignInManager.IsSignedIn(User) &&
     (User.IsInRole("SuperAdmin") || User.IsInRole("Admin") || User.IsInRole("TeamMember")))
{
    <div id="aiChatContainer">
        <!-- AI Assistant Button -->
        <button id="aiChatButton" class="ai-assistant-btn">
            <i class="fas fa-robot"></i>
            <span>AI Assistant</span>
        </button>

        <!-- Chat Modal -->
        <div id="aiChatModal" class="ai-chat-modal">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-robot me-2"></i>
                    AI Assistant
                </h5>
                <button type="button" id="closeChat" class="btn-close"></button>
            </div>
            <div class="modal-body">
                <div id="aiChatMessages" class="chat-messages">
                    <div class="ai-message">
                        <div class="message-content">
                            <strong>AI Assistant:</strong>
                            <p>Hello! I'm your AI Assistant. How can I help you with your projects today?</p>
                        </div>
                        <div class="message-time">Just now</div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="input-group">
                    <input type="text" id="aiMessageInput" class="form-control" placeholder="Ask me about projects, tasks, or teams...">
                    <button id="aiSendMessage" class="btn btn-primary">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
                <div class="text-center mt-2">
                    <small class="text-muted">Basic AI Assistance • Advanced features coming soon</small>
                </div>
            </div>
        </div>
    </div>

    <style>
        .ai-assistant-btn {
            position: fixed;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 25px;
            padding: 12px 24px;
            color: white;
            font-weight: 600;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
            z-index: 1000;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            animation: pulseAnimation 2s infinite;
        }

            .ai-assistant-btn:hover {
                transform: translateX(-50%) scale(1.05);
                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
            }

        .ai-chat-modal {
            position: fixed;
            bottom: 100px;
            right: 30px;
            width: 400px;
            height: 500px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            z-index: 1001;
            display: none;
            flex-direction: column;
            border: 1px solid #dee2e6;
        }

        .modal-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-bottom: none;
            border-radius: 10px 10px 0 0;
            padding: 15px 20px;
        }

        .modal-body {
            flex: 1;
            overflow-y: auto;
            padding: 15px;
            background: #f8f9fa;
        }

        .modal-footer {
            border-top: 1px solid #dee2e6;
            padding: 15px;
            background: white;
            border-radius: 0 0 10px 10px;
        }

        .chat-messages {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .user-message {
            align-self: flex-end;
            background: #007bff;
            color: white;
            padding: 12px 16px;
            border-radius: 18px;
            max-width: 80%;
            border-bottom-right-radius: 5px;
        }

        .ai-message {
            align-self: flex-start;
            background: white;
            padding: 12px 16px;
            border-radius: 18px;
            border: 1px solid #dee2e6;
            max-width: 80%;
            border-bottom-left-radius: 5px;
        }

        .message-content {
            margin-bottom: 5px;
        }

        .message-time {
            font-size: 11px;
            opacity: 0.7;
            text-align: right;
        }

        .ai-message .message-time {
            text-align: left;
        }

        @@keyframes pulseAnimation {
            0% {
                transform: translateX(-50%) scale(1);
            }

            50% {
                transform: translateX(-50%) scale(1.05);
            }

            100% {
                transform: translateX(-50%) scale(1);
            }
        }

        .modal-body::-webkit-scrollbar {
            width: 6px;
        }

        .modal-body::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        .modal-body::-webkit-scrollbar-thumb {
            background: #c1c1c1;
            border-radius: 3px;
        }

            .modal-body::-webkit-scrollbar-thumb:hover {
                background: #a8a8a8;
            }
    </style>

    <script>
        // ✅ ISOLATED AI ASSISTANT CODE - NO CONFLICT WITH LIVE CHAT
        (function() {
            'use strict';

            let aiModalOpen = false;

            document.addEventListener('DOMContentLoaded', function() {
                const aiChatButton = document.getElementById('aiChatButton');
                const aiChatModal = document.getElementById('aiChatModal');
                const closeChat = document.getElementById('closeChat');
                const aiSendButton = document.getElementById('aiSendMessage');
                const aiMessageInput = document.getElementById('aiMessageInput');
                const aiChatMessages = document.getElementById('aiChatMessages');

                // AI Assistant Modal Toggle
                if (aiChatButton && aiChatModal) {
                    aiChatButton.addEventListener('click', function() {
                        if (aiModalOpen) {
                            aiChatModal.style.display = 'none';
                            aiModalOpen = false;
                        } else {
                            aiChatModal.style.display = 'flex';
                            aiModalOpen = true;
                            aiMessageInput.focus();
                        }
                    });
                }

                // Close AI Modal
                if (closeChat) {
                    closeChat.addEventListener('click', function() {
                        aiChatModal.style.display = 'none';
                        aiModalOpen = false;
                    });
                }

                // AI Message Send
                if (aiSendButton && aiMessageInput) {
                    aiSendButton.addEventListener('click', sendAiMessage);
                    aiMessageInput.addEventListener('keypress', function(e) {
                        if (e.key === 'Enter') {
                            sendAiMessage();
                        }
                    });
                }

                // Close AI modal when clicking outside
                document.addEventListener('click', function(event) {
                    if (aiModalOpen &&
                        !aiChatModal.contains(event.target) &&
                        !aiChatButton.contains(event.target)) {
                        aiChatModal.style.display = 'none';
                        aiModalOpen = false;
                    }
                });

                async function sendAiMessage() {
                    const message = aiMessageInput.value.trim();
                    if (!message) return;

                    // Add user message to AI chat
                    addAiMessageToChat(message, 'user');
                    aiMessageInput.value = '';

                    try {
                        // Show AI typing indicator
                        const typingDiv = document.createElement('div');
                        typingDiv.className = 'ai-message';
                        typingDiv.innerHTML = '<em>AI Assistant is thinking...</em>';
                        aiChatMessages.appendChild(typingDiv);
                        aiChatMessages.scrollTop = aiChatMessages.scrollHeight;

                        // Call AI service
                        const response = await fetch('/AIChat/SendMessage', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                            },
                            body: JSON.stringify({ message: message })
                        });

                        // Remove typing indicator
                        aiChatMessages.removeChild(typingDiv);

                        const result = await response.json();

                        if (result.success) {
                            addAiMessageToChat(result.data.response, 'ai');
                        } else {
                            addAiMessageToChat('I encountered a temporary issue. Please try again.', 'ai');
                        }
                    } catch (error) {
                        addAiMessageToChat('I\'m here to help! What would you like to know about your projects?', 'ai');
                    }
                }

                function addAiMessageToChat(text, sender) {
                    const messageDiv = document.createElement('div');
                    messageDiv.className = `${sender}-message`;

                    const now = new Date();
                    const timeString = now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

                    if (sender === 'user') {
                        messageDiv.innerHTML = `
                            <div class="message-content">${text}</div>
                            <div class="message-time">${timeString}</div>
                        `;
                    } else {
                        messageDiv.innerHTML = `
                            <div class="message-content">
                                <strong>AI Assistant:</strong>
                                <p style="margin: 5px 0 0 0;">${text}</p>
                            </div>
                            <div class="message-time">${timeString}</div>
                        `;
                    }

                    aiChatMessages.appendChild(messageDiv);
                    aiChatMessages.scrollTop = aiChatMessages.scrollHeight;
                }

                // Prevent AI modal close when clicking inside
                if (aiChatModal) {
                    aiChatModal.addEventListener('click', function(event) {
                        event.stopPropagation();
                    });
                }
            });
        })();
    </script>
}